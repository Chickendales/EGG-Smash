      width: 100px;
      display: none;
      margin-top: 20px;
      cursor: pointer;
    }
    #message {
      margin-top: 20px;
      font-size: 20px;
      color: green;
    }
    #orderBtn {
      display: none;
      margin-top: 15px;
      background: #28a745;
