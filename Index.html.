<body>

  <h1>üêî Chickendales Egg Tap Game</h1>
  <p>Tap the chicken to lay an egg. Tap the egg until it breaks!</p>

  <img id="chicken" src="https://i.imgur.com/lYVZfC5.png" alt="Chicken">
  <br>
  <img id="egg" src="https://i.imgur.com/Vx3XcKp.png" alt="Egg">
  <div id="message"></div>
  <button id="orderBtn">Order with Coupon</button>

  <script>
    const chicken = document.getElementById("chicken");
    const egg = document.getElementById("egg");
    const message = document.getElementById("message");
    const orderBtn = document.getElementById("orderBtn");

    let eggHealth = 3;
    let coupon = null;

    const coupons = [
      { code: "5OFF", text: "üéâ You found a 5% OFF coupon!", chance: 0.3 },
      { code: "10OFF", text: "üî• You found a 10% OFF coupon!", chance: 0.2 },
      { code: "20OFF", text: "üí• You found a 20% OFF coupon!", chance: 0.07 },
      { code: "50OFF", text: "ü•ö RARE! 50% OFF coupon found!", chance: 0.01 }
    ];

    function getRandomCoupon() {
      const rand = Math.random();
      let total = 0;
      for (let c of coupons) {
        total += c.chance;
        if (rand < total) return c;
      }
      return null; // no coupon
    }

    chicken.onclick = () => {
      egg.style.display = "inline";
      egg.src = "https://i.imgur.com/Vx3XcKp.png";
      message.textContent = "";
      orderBtn.style.display = "none";
      eggHealth = 3;
      coupon = null;
    };

    egg.onclick = () => {
      eggHealth--;
      if (eggHealth === 2) {
        egg.src = "https://i.imgur.com/Yvcmuhk.png"; // cracked egg
      } else if (eggHealth === 1) {
        egg.src = "https://i.imgur.com/N4TY7uN.png"; // more cracked
      } else {
        egg.src = "https://i.imgur.com/4kZrChQ.png"; // broken egg
        coupon = getRandomCoupon();
        if (coupon) {
          message.textContent = coupon.text + ` Use code: ${coupon.code}`;
          orderBtn.style.display = "inline";
        } else {
          message.textContent = "üò¢ No coupon this time. Try again!";
        }
      }
    };

    orderBtn.onclick = () => {
      const whatsappMsg = `Hi! I'd like to order eggs using coupon code: ${coupon.code}`;
      const whatsappLink = `https://wa.me/27xxxxxxxxx?text=${encodeURIComponent(whatsappMsg)}`;
      window.open(whatsappLink, "_blank");
    };
  </script>

</body>
